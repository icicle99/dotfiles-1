# basic
hg commit -m "message"
hg amend
arc diff --prepare

# see view
hg sl  # smart log

# rebase
hg update <version>  # checkout
hg rebase -d master

# evolution
hg amend
hg evolve

# update
arc pull
arc clean

# local changes
hg shelve [path/file_name]
hg unshelve [bookmark]
hg revert [path]  # disregard